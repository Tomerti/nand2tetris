/**
 * A 16-bit counter with load and reset control bits.
 * if      (reset[t] == 1) out[t+1] = 0
 * else if (load[t] == 1)  out[t+1] = in[t]
 * else if (inc[t] == 1)   out[t+1] = out[t] + 1  (integer addition)
 * else                    out[t+1] = out[t]
 */

CHIP PC {
    IN in[16],load,inc,reset;
    OUT out[16];

    PARTS:
    // Put your code here:
    Inc16(in=registerOut, out=incremented);
    Mux16(a=false, b=incremented, sel=inc, out=increasedOut);
    Mux16(a=increasedOut, b=in, sel=load, out=loadOut);
    Mux16(a=loadOut, b=false, sel=reset, out=resetOut);
    Or(a=load, b=inc, out=li);
    Or(a=li, b=reset, out=lir);
    Register(in=resetOut, load=lir, out=registerOut, out=out);
}